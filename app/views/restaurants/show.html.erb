<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p>
    <strong>Name:</strong>
    <%= @restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @restaurant.phone_number %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @restaurant.category.capitalize %>
  </p>

  <p>
    <strong>Reviews and ratings:</strong>
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <p>Rating: <%= "⭐️" * review.rating %></p>
        <p>Review: <%= review.content %></p>
      </li>
    <% end %>
  </p>

</div>

<div class="container">
  <%= link_to "Back to restaurants", restaurants_path %> | <%= link_to "Add rating", new_restaurant_review_path(@restaurant) %>
</div>

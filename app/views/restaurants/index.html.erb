<div class="container">
  <h1>Restaurants</h1>
  <hr>
  <div>
    <% @restaurants.each do |restaurant| %>
    <p>
      <strong>Name:</strong>
      <%= restaurant.name %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= restaurant.address %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= restaurant.category.capitalize %>
    </p>
    <%= link_to "Show this restaurant", restaurant_path(restaurant) %>
    <hr>
    <% end %>
  </div>
   <%= link_to "New restaurant", new_restaurant_path %>
</div>

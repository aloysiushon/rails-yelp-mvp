<div class="container">
  <h1><%= @restaurant.name %>'s Review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: 1..5, include_blank: false  %>
  <%= f.input :content %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
</div>
<div class="container">
  <%= link_to "Back to restaurant", restaurant_path(@restaurant) %>
</div>
